{
    "name": "auto/uuid2id",
    "description": "uuid2id project",
    "type": "project",
    "license": "BSD-3-Clause",
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "ext-json": "^7.4",
        "php-di/php-di": "^6.3",
        "slim/psr7": "^1.3",
        "slim/slim": "^4.7",
        "symfony/console": "^5.2"
    },
    "require-dev": {
        "overtrue/phplint": "^2.3",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@lint",
            "@cs-check"
        ],
        "post-install-cmd": [],
        "app": "php bin/app.php --ansi",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "lint": "phplint",
        "psalm": "psalm",
        "test": "phpunit --colors=always"
    }
}
